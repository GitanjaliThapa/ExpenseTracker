<MudPaper Width="400px" Class="py-3" Elevation="0" Style="background-color: #f4f3ff; height: 1580px;">
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4" Style="color: #4800ae; font-weight: bold;">Personal Expense Tracker</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">gitanjali@gmail.com</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
        <MudNavLink Href="/custom-tag" Icon="@Icons.Material.Filled.AddCard">Add Tag</MudNavLink>
        <MudNavLink Href="/debt" Icon="@Icons.Material.Filled.AddCard">Debt</MudNavLink>
        <MudNavLink Href="/transaction" Icon="@Icons.Material.Filled.AddCard">Add Transaction</MudNavLink>
        <MudNavLink OnClick="ShowLogoutConfirmation" Icon="@Icons.Material.Filled.Logout">Logout</MudNavLink>
    </MudNavMenu>
</MudPaper>


@if (IslogOut)
{
    <div class="modal" tabindex="-1" role="dialog" style="display: block; background-color: rgba(0, 0, 0, 0.5); position: fixed; top: 0; left: 0; width: 100%; height: 100%; overflow: auto;">
        <div class="modal-dialog" role="document" style="margin-top: 20%; margin-left: auto; margin-right: auto; max-width: 400px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Logout</h5>
                    <button type="button" class="close" @onclick="HideLogoutConfirmation">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to logout?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideLogoutConfirmation">No</button>
                    <button type="button" class="btn btn-primary" @onclick="Logout">Yes</button>
                </div>
            </div>
        </div>
    </div>
}